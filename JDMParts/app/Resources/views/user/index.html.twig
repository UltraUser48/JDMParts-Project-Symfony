{% extends 'base.html.twig' %}

{% block body %}
    <h1>Users list</h1>


<div class="container">
    <h2>Everyone registered in the System</h2>
    <p>Only Super-Admins are allowed to Delete and Edit users and their privileges:</p>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Username</th>
                <th>Country</th>
                <th>Email</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.username}}</td>
                <td>{{ user.country }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.role }}</td>
                <td><a href="{{ path('admin_edit', { 'id': user.id }) }}"type="button" class="btn btn-info" >Edit</a></td>

            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>
{% endblock %}
